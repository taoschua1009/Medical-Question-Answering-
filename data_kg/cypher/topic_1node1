

// ===== Article 1 | Chunk 1 | Rối loạn phụ khoa =====
MERGE (d:Topic {name:"Rối loạn phụ khoa", layer:"Topic"})
MERGE (def1:Definition {name:"rối loạn phụ khoa là những rối loạn ảnh hưởng đến hệ sinh dục ở phụ nữ", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (det1:Detail {name:"các cơ quan trong hệ sinh dục nữ bao gồm vú, tử cung, ống dẫn trứng, buồng trứng và cơ quan sinh dục ngoài", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (p1:Population {name:"trong cuộc đời mỗi người phụ nữ, đều có thời điểm sẽ mắc một số bệnh phụ khoa nào đó", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p1)
MERGE (det2:Detail {name:"những rối loạn phụ khoa này ảnh hưởng rất lớn đến chức năng tình dục", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (comp1:Complication {name:"những rối loạn này không nên xem nhẹ vì chúng có thể ảnh hưởng xấu đến khả năng sinh sản, hoặc tệ hơn có thể đe dọa đến tính mạng của phụ nữ", layer:"Complication"})
MERGE (d)-[:HAS_COMPLICATION]->(comp1)

;

// ===== Article 1 | Chunk 2 | Các rối loạn phụ khoa phổ biến =====
MERGE (d:Topic {name:"Rối loạn phụ khoa", layer:"Topic"})
MERGE (sd1:SubTopic {name:"Các rối loạn phụ khoa phổ biến", layer:"SubTopic"})
MERGE (d)-[:HAS_SUBTOPIC]->(sd1)
MERGE (s1:Symptom {name:"đau bụng kinh hoặc đau nhiều khi hành kinh", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s1)
MERGE (s2:Symptom {name:"khí hư (ra nhiều nhiều huyết trắng âm đạo)", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s2)
MERGE (s3:Symptom {name:"vô kinh hoặc không có kinh trong một thời gian dài", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s3)
MERGE (s4:Symptom {name:"hội chứng buồng trứng đa nang (pcos)", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s4)
MERGE (s5:Symptom {name:"u xơ tử cung", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s5)
MERGE (s6:Symptom {name:"lạc nội mạc tử cung", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s6)
MERGE (s7:Symptom {name:"viêm nhiễm vùng khung chậu", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s7)
MERGE (s8:Symptom {name:"viêm âm đạo", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s8)
MERGE (s9:Symptom {name:"mãn kinh", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s9)
MERGE (s10:Symptom {name:"đau khi quan hệ tình dục", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s10)

;

// ===== Article 1 | Chunk 3 | Triệu chứng phụ khoa thường gặp =====

MERGE (d:Topic {name:"Rối loạn phụ khoa", layer:"Topic"})
MERGE (sd1:SubTopic {name:"Triệu chứng phụ khoa thường gặp", layer:"SubTopic"})
MERGE (d)-[:HAS_SUBTOPIC]->(sd1)
MERGE (s1:Symptom {name:"ra máu âm đạo, tiết dịch âm đạo thường xảy ra với mọi phụ nữ trong thời kỳ kinh nguyệt", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s1)
MERGE (a1:Advice {name:"nếu bạn phát hiện bất cứ triệu chứng gì bất thường, bạn không được chủ quan phớt lờ nó, mà phải hỏi ý kiến ​​bác sĩ phụ khoa", layer:"Advice"})
MERGE (sd1)-[:HAS_ADVICE]->(a1)
MERGE (t1:Detail {name:"các triệu chứng nhẹ có thể được điều trị", layer:"Detail"})
MERGE (sd1)-[:HAS_DETAIL]->(t1)
MERGE (comp1:Complication {name:"nhưng các trường hợp nghiêm trọng hoặc bị bỏ qua trong thời gian dài có thể dẫn đến vô sinh", layer:"Complication"})
MERGE (sd1)-[:HAS_COMPLICATION]->(comp1)
MERGE (det1:Detail {name:"một số dấu hiệu sau đây ở âm đạo có thể gợi ý bạn đang mắc các bệnh lây truyền qua đường tình dục hoặc thậm chí có thể là ung thư cổ tử cung", layer:"Detail"})
MERGE (sd1)-[:HAS_DETAIL]->(det1)
MERGE (a2:Advice {name:"bạn cần đi khám và hỏi bác sĩ nếu có các triệu chứng sau", layer:"Advice"})
MERGE (sd1)-[:HAS_ADVICE]->(a2)
MERGE (s2:Symptom {name:"kinh nguyệt đến quá sớm hoặc quá muộn so với bình thường", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s2)
MERGE (s3:Symptom {name:"ra máu âm đạo bất thường trong khi hành kinh hoặc giữa các kỳ kinh", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s3)
MERGE (s4:Symptom {name:"đau ở vùng chậu hông, mà không phải là đau bụng kinh", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s4)
MERGE (s5:Symptom {name:"đau vú hoặc nổi các u, cục ở vú", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s5)
MERGE (s6:Symptom {name:"cảm giác nóng rát khi đi tiểu", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s6)
MERGE (s7:Symptom {name:"ra máu âm đạo trong hoặc sau khi quan hệ tình dục", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s7)
MERGE (s8:Symptom {name:"đau khi quan hệ tình dục", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s8)
MERGE (s9:Symptom {name:"ngứa, sưng hoặc đỏ ở vùng âm đạo", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s9)
MERGE (s10:Symptom {name:"bất kỳ u, cục hoặc khối bất thường nào ở vùng sinh dục", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s10)
MERGE (s11:Symptom {name:"âm đạo tiết nhiều dịch (huyết trắng)", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s11)
MERGE (s12:Symptom {name:"dịch âm đạo có mùi hôi khó chịu hoặc có màu bất thường như xanh, vàng hoặc nâu", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s12)
MERGE (r1:RiskFactor {name:"bệnh lây truyền qua đường tình dục hoặc ung thư cổ tử cung", layer:"RiskFactor"})
MERGE (sd1)-[:HAS_RISK_FACTOR]->(r1)

;

// ===== Article 2 | Chunk 6 | Mãn kinh =====
MERGE (d:Topic {name:"Mãn kinh", layer:"Topic"})
MERGE (def1:Definition {name:"mãn kinh là thời kỳ người phụ nữ chấm dứt vĩnh viễn chu kỳ kinh nguyệt cho đến khi kết thúc cuộc đời", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (c1:Cause {name:"mãn kinh xảy ra do buồng trứng giảm chức năng hoạt động", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c1)
MERGE (det1:Detail {name:"thời kỳ mãn kinh được xác nhận sau khi ngừng kinh nguyệt trong mười hai tháng liên tục mà không có bất kỳ bệnh lý nào khác", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"độ tuổi mãn kinh dao động trong khoảng 45 - 55 tuổi", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)

;

// ===== Article 2 | Chunk 7 | Mãn kinh =====

MERGE (d:Topic {name:"Mãn kinh", layer:"Topic"})
MERGE (c1:Cause {name:"Thiếu hụt estrogen", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c1)
MERGE (comp1:Complication {name:"Loãng xương", layer:"Complication"})
MERGE (d)-[:HAS_COMPLICATION]->(comp1)
MERGE (comp2:Complication {name:"Bệnh lý tim mạch", layer:"Complication"})
MERGE (d)-[:HAS_COMPLICATION]->(comp2)
MERGE (s1:Symptom {name:"Giảm kích thước cơ quan sinh sản", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s1)
MERGE (s2:Symptom {name:"Mất khối lượng xương", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s2)
MERGE (s3:Symptom {name:"Bốc hỏa", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s3)
MERGE (det1:Detail {name:"Cảm giác nóng đột ngột", layer:"Detail"})
MERGE (s3)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"Đổ mồ hôi đầm đìa", layer:"Detail"})
MERGE (s3)-[:HAS_DETAIL]->(det2)
MERGE (s4:Symptom {name:"Khó chịu", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s4)
MERGE (s5:Symptom {name:"Nhức đầu", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s5)
MERGE (s6:Symptom {name:"Mất ngủ", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s6)
MERGE (s7:Symptom {name:"Dễ nổi nóng", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s7)
MERGE (s8:Symptom {name:"Trầm cảm", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s8)
MERGE (s9:Symptom {name:"Đau khi quan hệ tình dục", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s9)
MERGE (s10:Symptom {name:"Giảm ham muốn tình dục", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s10)
MERGE (s11:Symptom {name:"Khô âm đạo", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s11)
MERGE (s12:Symptom {name:"Nhiễm trùng âm đạo", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s12)
MERGE (s13:Symptom {name:"Đi tiểu đau", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s13)
MERGE (s14:Symptom {name:"Tiểu không tự chủ", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s14)
MERGE (s15:Symptom {name:"Nhiễm trùng đường tiết niệu tái phát", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s15)
MERGE (t1:Treatment {name:"Liệu pháp nội tiết tố tại chỗ", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t1)
MERGE (det3:Detail {name:"Điều trị tối ưu triệu chứng ở âm đạo", layer:"Detail"})
MERGE (t1)-[:HAS_DETAIL]->(det3)
MERGE (det4:Detail {name:"Ít tác dụng phụ", layer:"Detail"})
MERGE (t1)-[:HAS_DETAIL]->(det4)
MERGE (t2:Treatment {name:"Liệu pháp nội tiết tố toàn thân", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t2)
MERGE (det5:Detail {name:"Điều trị triệu chứng tim mạch", layer:"Detail"})
MERGE (t2)-[:HAS_DETAIL]->(det5)
MERGE (prev1:Prevention {name:"Sử dụng liều lượng thấp nhất", layer:"Prevention"})
MERGE (t2)-[:HAS_PREVENTION]->(prev1)
MERGE (prev2:Prevention {name:"Sử dụng trong thời gian ngắn nhất", layer:"Prevention"})
MERGE (t2)-[:HAS_PREVENTION]->(prev2)
MERGE (rf1:RiskFactor {name:"Huyết khối tĩnh mạch (Cục máu đông)", layer:"RiskFactor"})
MERGE (t2)-[:HAS_RISK_FACTOR]->(rf1)
MERGE (rf2:RiskFactor {name:"Ung thư vú", layer:"RiskFactor"})
MERGE (t2)-[:HAS_RISK_FACTOR]->(rf2)

;

// ===== Article 2 | Chunk 10 | Tầm quan trọng của việc khám phụ khoa =====
MERGE (d:Topic {name:"Tầm quan trọng của việc khám phụ khoa", layer:"Topic"})
MERGE (p1:Population {name:"tất cả phụ nữ có hoạt động tình dục", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p1)
MERGE (a1:Advice {name:"bắt đầu từ 21 tuổi trở lên hoặc sau 3 năm quan hệ tình dục qua đường âm đạo", layer:"Advice"})
MERGE (d)-[:HAS_ADVICE]->(a1)
MERGE (pr1:Prevention {name:"sàng lọc phụ khoa nên được thực hiện hàng năm cho đến khi 30 tuổi", layer:"Prevention"})
MERGE (d)-[:HAS_PREVENTION]->(pr1)
MERGE (pr2:Prevention {name:"sau đó, thực hiện cách nhau 2 - 3 năm một lần sau ba lần xét nghiệm phết tế bào âm tính hàng năm liên tiếp", layer:"Prevention"})
MERGE (d)-[:HAS_PREVENTION]->(pr2)
MERGE (det1:Detail {name:"việc thăm khám lâm sàng cho bệnh nhân phụ khoa cần kỹ lưỡng và tỉ mỉ. điều này bao gồm việc khai thác bệnh sử và thăm khám lâm sàng chuyên sâu", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"khám phụ khoa bao gồm khám vú, khám bụng và khám vùng chậu. bao gồm cả khám cơ quan sinh dục ngoài, thăm âm đạo và cổ tử cung và khám trực tràng", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (det3:Detail {name:"cổ tử cung và âm đạo được thường được xét nghiệm tế bào học bằng phết tế bào để tầm soát", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det3)
MERGE (a2:Advice {name:"khám sàng lọc giúp bác sĩ giải thích cho bệnh nhân về lợi ích của việc duy trì lối sống lành mạnh", layer:"Advice"})
MERGE (d)-[:HAS_ADVICE]->(a2)
MERGE (app1:Application {name:"ngoài ra giúp giảm thiểu rủi ro về sức khỏe và xác định các trường hợp mắc bệnh lây truyền qua đường tình dục, ung thư vú, ung thư cổ tử cung hoặc ung thư nội mạc tử cung", layer:"Application"})
MERGE (d)-[:HAS_APPLICATION]->(app1)
MERGE (a3:Advice {name:"chẩn đoán sớm giúp điều trị hiệu quả và tiên lượng tốt hơn", layer:"Advice"})
MERGE (d)-[:HAS_ADVICE]->(a3)

;

