// ===== Article 5 | Chunk 1 | Tiền mãn kinh =====
MERGE (d:Topic {name:"Tiền mãn kinh", layer:"Topic"})
MERGE (s1:Symptom {name:"chu kì kinh nguyệt thay đổi", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s1)
MERGE (p1:Population {name:"người phụ nữ", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p1)
