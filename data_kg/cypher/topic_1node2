MERGE (def1:Definition {name:"bpp sử dụng một hệ thống thang điểm để đánh giá sự khỏe mạnh của thai nhi trong 5 lĩnh vực: 1. nhịp tim thai nhi; 2. cử động thở thai nhi; 3. cử động cơ thể thai nhi; 4. trương lực cơ thai nhi; 5. lượng nước ối.", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (det1:Detail {name:"mỗi lĩnh vực sẽ được cho điểm từ 0 đến 2, tổng điểm cho 5 lĩnh vực tối đa là 10 điểm.", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)


;

// ===== Article 242 | Chunk 15 | Test co thắt đả kích =====
MERGE (d:Topic {name:"Test co thắt đả kích", layer:"Topic"})
MERGE (def1:Definition {name:"test co thắt đả kích giúp bác sĩ theo dõi phản ứng của nhịp tim thai khi tử cung co thắt", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (ap1:Application {name:"test co thắt đả kích đôi khi được sử dụng nếu kết quả các xét nghiệm khác không rõ hoặc dương tính", layer:"Application"})
MERGE (d)-[:HAS_APPLICATION]->(ap1);

