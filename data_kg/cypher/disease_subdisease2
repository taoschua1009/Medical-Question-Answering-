
// ===== Article 116 | Chunk 1 | Bệnh lây truyền qua đường tình dục  =====
MERGE (d:Disease {name:"Bệnh lây truyền qua đường tình dục", layer:"Disease"})
MERGE (def1:Definition {name:"bệnh lây lan qua tiếp xúc tình dục", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (det1:Detail {name:"có thể gây tổn hại nặng cho cơ thể, thậm chí tử vong", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"một số có thể điều trị khỏi, một số không thể", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)

