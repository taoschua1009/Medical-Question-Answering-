MERGE (d)-[:HAS_TREATMENT]->(t5)
MERGE (t6:Treatment {name:"phương pháp hỗ trợ sinh sản", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t6)
MERGE (det1:Detail {name:"buồng trứng to ra và xuất hiện nhiều nang (hơn 12 nang), với đường kính mỗi nang từ 2-9 mm", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
