// ===== Article 261 | Chunk 4 | Hoại tử mỡ tuyến vú =====
MERGE (d:Disease {name:"Hoại tử mỡ tuyến vú", layer:"Disease"})
MERGE (s1:Symptom {name:"khối u trong vú", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s1)
MERGE (pr1:Prevention {name:"sàng lọc vú thường quy (chụp x-quang vú)", layer:"Prevention"})
MERGE (d)-[:HAS_PREVENTION]->(pr1)
MERGE (t1:Treatment {name:"khám và điều trị bởi các bác sĩ chuyên khoa vú", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t1)
MERGE (t2:Treatment {name:"chụp nhũ ảnh (chụp x quang vú)", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t2)
MERGE (t3:Treatment {name:"siêu âm (dùng sóng âm tạo nên hình ảnh)", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t3)
MERGE (t4:Treatment {name:"sinh thiết lõi (sử dụng một kim rỗng lấy một hoặc một vài mẫu mô nhỏ, quan sát mẫu mô dưới kính hiển vi)", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t4)
MERGE (t5:Treatment {name:"chọc hút kim nhỏ – fna (sử dụng một kim nhỏ và ống xi lanh để lấy một mẫu tế bào, sau đó quan sát mẫu dưới kính hiển vi)", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t5)
MERGE (det1:Detail {name:"hoại tử mỡ có thể tương tự với ung thư vú trên phim x-quang hoặc hình ảnh chuẩn đoán khác", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"nếu phim x-quang hoặc siêu âm cho thấy tổn thương hoại tử mỡ rõ ràng, không cần thực hiện thêm các xét nghiệm khác", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (det3:Detail {name:"nếu có nghi ngờ về phim x-quang hoặc siêu âm, bác sĩ có thể chỉ định thực hiện thêm sinh thiết để xác định", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det3)
MERGE (det4:Detail {name:"chụp x-quang ít được chỉ định ở phụ nữ dưới 40 tuổi do mô vú dày đặc hơn làm cho hình ảnh x-quang khó quan sát", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det4)
MERGE (det5:Detail {name:"chụp x-quang đôi khi cũng có thể hỗ trợ chẩn đoán", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det5)

// ===== Article 261 | Chunk 5 | Hoại tử mỡ tuyến vú =====
MERGE (d:Disease {name:"Hoại tử mỡ tuyến vú", layer:"Disease"})
MERGE (det1:Detail {name:"hoại tử mỡ không gây hại đến sức khỏe nên thường không cần điều trị hay theo dõi", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"trong hầu hết các trường hợp cơ thể sẽ tự phân hủy khối hoại tử mỡ theo thời gian (có thể mất vài tháng)", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (a1:Advice {name:"nếu khối hoại tử mỡ phát triển lớn hơn hoặc bệnh nhân cảm thấy bất kỳ thay đổi bất thường nào ở tuyến vú thì nên gặp bác sĩ để được thăm khám và điều trị", layer:"Advice"})
MERGE (d)-[:HAS_ADVICE]->(a1)

