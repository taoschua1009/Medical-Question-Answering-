MERGE (d:Disease {name:"Viêm tiểu phế quản ở trẻ", layer:"Disease"})
MERGE (t1:Treatment {name:"nếu con bạn bị khó thở mức độ nhẹ đến vừa, bác sĩ của bé có thể cho một loại thuốc giúp giãn nở các phế quản. cách này có thể có tác dụng đối với một số trẻ nhỏ", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t1)
MERGE (t2:Treatment {name:"các trẻ bị viêm tiểu phế quản cần được điều trị tại bệnh viện do khó thở hoặc mất nước. có thể cần hỗ trợ thở oxi và thuốc để điều trị tình trạng khó thở", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t2)
MERGE (t3:Treatment {name:"tình trạng mất nước có thể được điều trị bằng cách cho thức ăn đặc biệt dưới dạng chất lỏng hoặc truyền dịch qua tĩnh mạnh (iv)", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t3)
MERGE (t4:Treatment {name:"trong một vài ca rất hiếm, trẻ sẽ được cho sử dụng mặt nạ oxy nếu các cách trên không hiệu quả. chỉ điều trị tạm thời bằng phương pháp này cho đến khi hết nhiễm trùng", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t4)

