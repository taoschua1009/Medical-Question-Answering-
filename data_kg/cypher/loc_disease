// ===== Article 260 | Chunk 1 | Hội chứng Fitz-Hugh-Curtis =====
MERGE (d:Disease {name:"Hội chứng Fitz-Hugh-Curtis", layer:"Disease"})
MERGE (p1:Population {name:"phụ nữ", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p1)
MERGE (s1:Symptom {name:"đau nhiều hạ sườn phải", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s1)
MERGE (s2:Symptom {name:"sốt", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s2)
MERGE (s3:Symptom {name:"ớn lạnh", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s3)
MERGE (s4:Symptom {name:"đau đầu", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s4)
MERGE (s5:Symptom {name:"cảm thấy sức khỏe suy sụp", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s5)
MERGE (c1:Cause {name:"biến chứng của bệnh viêm vùng chậu (pid)", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c1)
MERGE (c2:Cause {name:"nhiễm trùng đường sinh dục trên ở phụ nữ", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c2)
MERGE (c3:Cause {name:"neisseria gonorrhoeae", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c3)
MERGE (c4:Cause {name:"chlamydia trachomatis", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c4)
MERGE (def1:Definition {name:"hội chứng fitz-hugh-curtis là một bệnh hiếm gặp, hầu như chỉ xảy ra ở phụ nữ. nó được đặc trưng bởi tình trạng viêm màng lót dạ dày (phúc mạc) các mô xung quanh gan (viêm quanh gan). cơ ngăn cách dạ dày và lồng ngực (cơ hoành), giữ vai trò thiết yếu trong việc thở, cũng có thể bị ảnh hưởng.", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)

