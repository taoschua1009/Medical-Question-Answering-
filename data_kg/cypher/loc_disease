MERGE (det2:Detail {name:"nhiều trường hợp mắc hội chứng fitz-hugh-curtis là do nhiễm chlamydia trachomatis hơn là do neisseria gonorrhoeae", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (det3:Detail {name:"cơ chế bệnh sinh của fitz-hugh-curtis vẫn chưa được hiểu hoàn toàn", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det3)
MERGE (det4:Detail {name:"sự nhiễm trùng gan và các mô xung quanh, có thể do vi khuẩn di chuyển trực tiếp từ khung chậu đến gan hoặc qua đường máu hoặc hệ thống bạch huyết", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det4)
MERGE (det5:Detail {name:"đáp ứng tự miễn với việc nhiễm vi khuẩn neisseria gonorrhoeae hoặc chlamydia trachomatis", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det5)
MERGE (det6:Detail {name:"bệnh lý tự miễn xảy ra khi hệ thống phòng thủ tự nhiên của cơ thể (kháng thể, tế bào bạch huyết, v.v), chống lại sự xâm nhập đột ngột của các sinh vât lạ khi chúng bắt đầu tấn công các mô khỏe mạnh của cơ thể", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det6)
MERGE (det7:Detail {name:"những người mắc hội chứng fitz-hugh-curtis có lượng kháng thể cao chống lại chlamydia trachomatis", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det7)
MERGE (det8:Detail {name:"nghiên cứu thêm là cần thiết để xác định vai trò của tự miễn dịch trong sự phát triển của hội chứng fitz-hugh-curtis", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det8)
MERGE (def1:Definition {name:"hội chứng fitz-hugh-curtis được đặc trưng bởi sự phát triển của mô sẹo dạng sợi, dạng chuỗi (kết dính) giữa gan và thành bụng hoặc cơ hoành", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)

// ===== Article 260 | Chunk 4 | Hội chứng Fitz-Hugh-Curtis =====
MERGE (d:Disease {name:"Hội chứng Fitz-Hugh-Curtis", layer:"Disease"})
MERGE (p1:Population {name:"phụ nữ trong độ tuổi sinh sản bị bệnh viêm vùng chậu (pid)", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p1)
MERGE (rf1:RiskFactor {name:"bị viêm vùng chậu (pid)", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf1)
MERGE (det1:Detail {name:"khoảng 4-14% phụ nữ bị viêm vùng chậu phát triển hội chứng fitz-hugh-curtis", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (p2:Population {name:"thanh thiếu niên dễ bị nhiễm trùng gây viêm vùng chậu", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p2)
MERGE (det2:Detail {name:"tỷ lệ thực tế của hội chứng fitz-hugh-curtis trong dân số nói chung vẫn chưa được biết", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (p3:Population {name:"nam giới", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p3)
MERGE (det3:Detail {name:"trong một vài trường hợp cực kỳ hiếm, nó đã xảy ra ở nam giới", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det3)
MERGE (det4:Detail {name:"hội chứng fitz-hugh-curtis được mô tả lần đầu tiên trong các tài liệu y khoa vào năm 1920", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det4)

// ===== Article 260 | Chunk 5 | Hội chứng Fitz-Hugh-Curtis =====
MERGE (d:Disease {name:"Hội chứng Fitz-Hugh-Curtis", layer:"Disease"})
MERGE (det1:Detail {name:"những triệu chứng của các bệnh lý sau đây có thể tương tự như các triệu chứng của hội chứng fitz-hugh-curtis", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)

// ===== Article 260 | Chunk 8 | Hội chứng Fitz-Hugh-Curtis =====
MERGE (d:Disease {name:"Hội chứng Fitz-Hugh-Curtis", layer:"Disease"})
MERGE (det1:Detail {name:"một số các bệnh lý khác có thể giống như hội chứng fitz-hugh-curtis bao gồm: sỏi đường mật, viêm bể thận, viêm tụy, bệnh giời leo, viêm ruột thừa, sỏi thận, bệnh loét dạ dày tá tràng, viêm phổi do vi khuẩn, nấm hoặc virus", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)

// ===== Article 260 | Chunk 9 | Hội chứng Fitz-Hugh-Curtis =====
MERGE (d:Disease {name:"Hội chứng Fitz-Hugh-Curtis", layer:"Disease"})
MERGE (det1:Detail {name:"chẩn đoán hội chứng fitz-hugh-curtis được thực hiện thông qua việc loại trừ các nguyên nhân khác gây đau bụng trên bên phải", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"các xét nghiệm chuyên biệt giúp chẩn đoán xác định, bao gồm: các xét nghiệm kiểm tra bằng tia x, nội soi ổ bụng chẩn đoán, và một số xét nghiệm nhất định", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (det3:Detail {name:"các xét nghiệm kiểm tra bằng tia x bao gồm siêu âm, chụp x-quang phổi hoặc dạ dày và chụp cắt lớp vi tính (ct)", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det3)
MERGE (det4:Detail {name:"chụp x-quang đóng vai trò loại trừ các bệnh cảnh khác hoặc đánh giá tình trạng viêm quanh bao gan", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det4)
MERGE (det5:Detail {name:"trong quá trình nội soi, một ống nhỏ được đưa vào khoang bụng thông qua một vết rạch nhỏ trên thành bụng", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det5)
MERGE (det6:Detail {name:"nội soi ổ bụng giúp các bác sĩ quan sát gan và mô quanh gan", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det6)
MERGE (det7:Detail {name:"các xét nghiệm trong phòng thí nghiệm có thể xác định nhiễm chlamydia trachomatis hoặc neisseria gonorrhoeae", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det7)

// ===== Article 260 | Chunk 10 | Hội chứng Fitz-Hugh-Curtis =====
MERGE (d:Disease {name:"Hội chứng Fitz-Hugh-Curtis", layer:"Disease"})
MERGE (t1:Treatment {name:"liệu pháp kháng sinh là phương pháp điều trị chính cho những người mắc hội chứng fitz-hugh-curtis", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t1)
MERGE (t2:Treatment {name:"các liều lượng khác nhau của tetracycline, doxycycline, ofloxacin, metronidazole và các loại kháng sinh bổ sung có thể được kê đơn để điều trị nhiễm trùng cơ bản", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t2)
MERGE (t3:Treatment {name:"thuốc giảm đau (acetaminophen và codeine) có thể được sử dụng trong một số trường hợp", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t3)
MERGE (t4:Treatment {name:"trong một số trường hợp, liệu pháp kháng sinh có thể không làm giảm các triệu chứng và phẫu thuật mở bụng có thể được thực hiện", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t4)
MERGE (t5:Treatment {name:"trong phẫu thuật mở bụng, một dụng cụ nhỏ, mỏng được đưa vào khoang bụng thông qua một vết rạch nhỏ trên bụng. sau đó, bác sĩ có thể phá hủy bất kỳ mô sẹo xơ nào (kết dính) được tìm thấy trong vùng quanh gan", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t5)

// ===== Article 261 | Chunk 1 | Hoại tử mỡ tuyến vú =====
MERGE (d:Disease {name:"Hoại tử mỡ tuyến vú", layer:"Disease"})
MERGE (def1:Definition {name:"hoại tử mỡ tuyến vú là một bệnh lý lành tính (không phải ung thư) phát triển phổ biến sau một tổn thương hoặc chấn thương đến nhu mô tuyến vú", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (c1:Cause {name:"một tổn thương hoặc chấn thương đến nhu mô tuyến vú", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c1)
MERGE (det1:Detail {name:"một khối bất thường có thể hình thành nếu một khu vực mô mỡ tuyến vú bị thương tổn (trong quá trình sinh thiết hoặc phẫu thuật vú)", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"hoại tử là một thuật ngữ y khoa mô tả các mô bị thương tổn hoặc mô chết, có thể xảy ra ở bất kỳ vị trí nào trong tuyến vú", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (p1:Population {name:"phụ nữ trong bất kỳ lứa tuổi nào", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p1)
MERGE (rf1:RiskFactor {name:"hiếm gặp ở nam giới", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf1)
MERGE (det3:Detail {name:"hoại tử mỡ không làm tăng nguy cơ phát triển ung thư vú ở phụ nữ", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det3)

// ===== Article 261 | Chunk 2 | Hoại tử mỡ tuyến vú =====
MERGE (d:Disease {name:"Hoại tử mỡ tuyến vú", layer:"Disease"})
MERGE (c1:Cause {name:"sinh thiết vú", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c1)
MERGE (c2:Cause {name:"phẫu thuật vú (phẫu thuật bảo tồn, phẫu thuật thu nhỏ vú, phẫu thuật tái tạo vú hoặc phẫu thuật thẩm mỹ làm tăng kích cỡ vú)", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c2)
MERGE (c3:Cause {name:"nâng ngực bằng mỡ tự thân (mỡ được lấy ra từ một phần khác của cơ thể và được cấy vào tuyến vú) để cải thiện hình dạng vú sau phẫu thuật", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c3)
MERGE (c4:Cause {name:"di chứng hoặc tổn thương do tai nạn", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c4)
MERGE (det1:Detail {name:"hoại tử mỡ thường phát triển sau phẫu thuật hoặc tổn thương vú", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"đôi khi hoại tử mỡ phát triển mà không liên quan đến bất kỳ yếu tố tổn thương hay chấn thương nào", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)

