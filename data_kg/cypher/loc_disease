// ===== Article 202 | Chunk 2 | Ối vỡ non trên thai non tháng (PPROM) =====
MERGE (d:Disease {name:"Ối vỡ non trên thai non tháng", layer:"Disease"})
MERGE (det1:Detail {name:"mục đích bài này là giúp bạn hiểu rõ hơn về sức khỏe. từ đó, bạn có thể đưa ra lựa chọn điều trị chăm sóc sức khỏe hợp lý. đội ngũ bác sĩ luôn sẵn sàng hỗ trợ thai phụ đưa ra các quyết định phù hợp. họ sẽ hỏi bệnh và trả lời các câu hỏi thắc mắc của bạn về tình trạng bệnh. thông tin này bao gồm: ối vỡ non trên thai non tháng (pprom). bạn nên làm gì nếu bị ối vỡ non trên thai non tháng. nếu bạn được chẩn đoán pprom tại bệnh viện thì sẽ được xử trí như thế nào. ối vỡ non trên thai non tháng có ảnh hưởng như thế nào đến mẹ và thai. các phương pháp điều trị. thông tin về sinh đẻ. pprom có ảnh hưởng gì đối với những lần mang thai sau đó. thêm thông tin và hỗ trợ có sẵn.", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)

// ===== Article 202 | Chunk 3 | Ối vỡ non trên thai non tháng (PPROM) =====
MERGE (d:Disease {name:"Ối vỡ non trên thai non tháng", layer:"Disease"})
MERGE (def1:Definition {name:"ối vỡ trước 37 tuần nhưng thai phụ vẫn chưa chuyển dạ", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (rf1:RiskFactor {name:"nguy cơ sinh non cao", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf1)
MERGE (rf2:RiskFactor {name:"tăng khả năng bị nhiễm trùng", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf2)
MERGE (comp1:Complication {name:"ảnh hưởng xấu đến sức khỏe mẹ và con", layer:"Complication"})
MERGE (d)-[:HAS_COMPLICATION]->(comp1)
MERGE (t1:Treatment {name:"sử dụng kháng sinh để giảm nguy cơ nhiễm trùng tiến triển", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t1)
MERGE (det1:Detail {name:"từ đó giúp thai kỳ tiếp tục an toàn", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"nếu bạn khỏe mạnh không có dấu hiệu nhiễm trùng và thai nhi phát triển tốt trong tử cung thì ưu tiên tiếp tục kéo dài thai kỳ đến 37 tuần", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)
MERGE (p1:Population {name:"mẹ và thai nhi", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p1)
MERGE (det3:Detail {name:"đội ngũ bác sĩ sẽ theo dõi dấu hiệu nhiễm trùng, kể cả về hoàn cảnh và điều kiện cá nhân của bạn", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det3)
MERGE (comp2:Complication {name:"trong trường hợp bạn và thai nhi có các dấu hiệu nhiễm trùng hoặc các biến chứng khác xuất hiện, bạn cần phải sinh em bé ngay lập tức", layer:"Complication"})
MERGE (d)-[:HAS_COMPLICATION]->(comp2)

// ===== Article 202 | Chunk 4 | Ối vỡ non trên thai non tháng (PPROM) =====
MERGE (d:Disease {name:"Ối vỡ non trên thai non tháng", layer:"Disease"})
MERGE (def1:Definition {name:"thai nhi được bao quanh bởi nước ối hay “nước” chứa trong một túi màng (túi ối) bên trong tử cung. thông thường, nước ối sẽ vỡ ngay trước hoặc trong khi chuyển dạ. nếu ối vỡ trước chuyển dạ khi thai chưa đủ 37 tuần, được gọi là ối vỡ non trên thai non tháng (pprom).", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (rf1:RiskFactor {name:"có thể xảy ra ở tối đa 3 trong số 100 phụ nữ mang thai (3%)", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf1)
MERGE (comp1:Complication {name:"có liên quan đến 3 - 4 trong số 10 ca sinh non", layer:"Complication"})
MERGE (d)-[:HAS_COMPLICATION]->(comp1)
MERGE (c1:Cause {name:"nguyên nhân của pprom không thực sự rõ ràng. có thể là do nhiễm trùng, các vấn đề về bánh nhau hoặc các nguyên nhân khác.", layer:"Cause"})
MERGE (d)-[:HAS_CAUSE]->(c1)

