
// ===== Article 1 | Chunk 4 | Đau bụng kinh =====
MERGE (d:Disease {name:"Đau bụng kinh", layer:"Disease"})
MERGE (def1:Definition {name:"đau bụng kinh nói về khoảng thời gian đau lúc hành kinh, làm ảnh hưởng đến sinh hoạt hàng ngày", layer:"Definition"})
MERGE (d)-[:HAS_DEFINITION]->(def1)
MERGE (det1:Detail {name:"được chia thành hai loại: đau bụng kinh nguyên phát và thứ phát", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)

// ===== Article 1 | Chunk 5 | Đau bụng kinh nguyên phát =====

MERGE (d:Disease {name:"Đau bụng kinh", layer:"Disease"})
MERGE (sd:SubDisease {name:"Đau bụng kinh nguyên phát", layer:"SubDisease"})
MERGE (d)-[:HAS_SUBDISEASE]->(sd)
MERGE (p1:Population {name:"thanh thiếu niên", layer:"Population"})
MERGE (sd)-[:AFFECTS]->(p1)
MERGE (p2:Population {name:"phụ nữ sống ở môi trường xã hội sung túc đầy đủ", layer:"Population"})
MERGE (sd)-[:AFFECTS]->(p2)
MERGE (p3:Population {name:"phụ nữ mang thai", layer:"Population"})
MERGE (sd)-[:AFFECTS]->(p3)
MERGE (p4:Population {name:"phụ nữ sau sinh", layer:"Population"})
MERGE (sd)-[:AFFECTS]->(p4)
MERGE (rf1:RiskFactor {name:"yếu tố gia đình như mẹ hoặc chị gái từng có triệu chứng tương tự", layer:"RiskFactor"})
MERGE (sd)-[:HAS_RISK_FACTOR]->(rf1)
MERGE (rf2:RiskFactor {name:"liên quan đến chu kỳ rụng trứng", layer:"RiskFactor"})
MERGE (sd)-[:HAS_RISK_FACTOR]->(rf2)
MERGE (s1:Symptom {name:"cơn đau bắt đầu vài giờ trước hoặc ngay khi bắt đầu hành kinh", layer:"Symptom"})
MERGE (sd)-[:HAS_SYMPTOM]->(s1)
MERGE (s2:Symptom {name:"cơn đau kéo dài vài giờ hoặc cả ngày", layer:"Symptom"})
MERGE (sd)-[:HAS_SYMPTOM]->(s2)
MERGE (s3:Symptom {name:"cơn đau co thắt vùng bụng dưới", layer:"Symptom"})
MERGE (sd)-[:HAS_SYMPTOM]->(s3)
MERGE (s4:Symptom {name:"cơn đau lan ra phía sau lưng", layer:"Symptom"})
MERGE (sd)-[:HAS_SYMPTOM]->(s4)
MERGE (s5:Symptom {name:"cơn đau lan xuống mặt giữa của đùi", layer:"Symptom"})
MERGE (sd)-[:HAS_SYMPTOM]->(s5)
MERGE (dt1:Detail {name:"không có bệnh vùng chậu nào khác đi kèm", layer:"Detail"})
MERGE (sd)-[:HAS_DETAIL]->(dt1)
MERGE (dt2:Detail {name:"cơn đau tự giảm khi phụ nữ mang thai hoặc sau sinh", layer:"Detail"})
MERGE (sd)-[:HAS_DETAIL]->(dt2)
MERGE (dt3:Detail {name:"thường xuất hiện trong vòng hai năm sau khi có kinh nguyệt", layer:"Detail"})
MERGE (sd)-[:HAS_DETAIL]->(dt3)
MERGE (dt4:Detail {name:"đau bụng kinh nguyên phát chủ yếu xuất hiện ở thanh thiếu niên", layer:"Detail"})
MERGE (sd)-[:HAS_DETAIL]->(dt4)
MERGE (dt5:Detail {name:"có thể loại trừ các bệnh vùng chậu bằng siêu âm", layer:"Detail"})
MERGE (sd)-[:HAS_DETAIL]->(dt5)
MERGE (t1:Treatment {name:"cải thiện sức khỏe thể chất và ổn định tâm lý", layer:"Treatment"})
MERGE (sd)-[:HAS_TREATMENT]->(t1)
MERGE (t2:Treatment {name:"trấn an người bệnh", layer:"Treatment"})
MERGE (sd)-[:HAS_TREATMENT]->(t2)
MERGE (t3:Treatment {name:"trong thời kỳ kinh nguyệt nên đại tiện khi cần và tránh táo bón", layer:"Treatment"})
MERGE (sd)-[:HAS_TREATMENT]->(t3)
MERGE (t4:Treatment {name:"dùng thuốc chống co thắt đơn giản khi có co thắt", layer:"Treatment"})
MERGE (sd)-[:HAS_TREATMENT]->(t4)
MERGE (t5:Treatment {name:"axit mefenamic 250-500 mg mỗi 8 tiếng", layer:"Treatment"})
MERGE (sd)-[:HAS_TREATMENT]->(t5)
MERGE (t6:Treatment {name:"ibuprofen 400 mg mỗi 8 tiếng", layer:"Treatment"})
MERGE (sd)-[:HAS_TREATMENT]->(t6)

// ===== Article 1 | Chunk 6 | Đau bụng kinh thứ phát =====
MERGE (d:Disease {name:"Đau bụng kinh", layer:"Disease"})
MERGE (sd1:SubDisease {name:"Đau bụng kinh thứ phát", layer:"SubDisease"})
MERGE (d)-[:HAS_SUBDISEASE]->(sd1)
MERGE (c1:Cause {name:"nhiễm trùng vùng chậu mãn tính", layer:"Cause"})
MERGE (sd1)-[:HAS_CAUSE]->(c1)
MERGE (c2:Cause {name:"lạc nội mạc tử cung vùng chậu", layer:"Cause"})
MERGE (sd1)-[:HAS_CAUSE]->(c2)
MERGE (c3:Cause {name:"u xơ tử cung", layer:"Cause"})
MERGE (sd1)-[:HAS_CAUSE]->(c3)
MERGE (c4:Cause {name:"đặt vòng tránh thai", layer:"Cause"})
MERGE (sd1)-[:HAS_CAUSE]->(c4)
MERGE (p1:Population {name:"phụ nữ độ tuổi 30 và đã có con", layer:"Population"})
MERGE (sd1)-[:AFFECTS]->(p1)
MERGE (s1:Symptom {name:"đau âm ỉ", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s1)
MERGE (s2:Symptom {name:"đau ở cả phía sau và phía trước", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s2)
MERGE (s3:Symptom {name:"cơn đau không lan đến vùng khác", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s3)
MERGE (s4:Symptom {name:"cơn đau xảy ra 3 - 5 ngày trước kỳ kinh nguyệt", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s4)
MERGE (s5:Symptom {name:"cơn đau thuyên giảm khi bắt đầu ra máu", layer:"Symptom"})
MERGE (sd1)-[:HAS_SYMPTOM]->(s5)
MERGE (t1:Treatment {name:"điều trị tập trung vào nguyên nhân thay vì điều trị triệu chứng", layer:"Treatment"})
MERGE (sd1)-[:HAS_TREATMENT]->(t1)

// ===== Article 1 | Chunk 11 | Hội chứng buồng trứng đa nang =====
