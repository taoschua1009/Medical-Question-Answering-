MERGE (s1:Symptom {name:"đau thắt ngực (cảm giác ngực bị đau siết chặt, đè nặng)", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s1)
MERGE (s2:Symptom {name:"khó thở", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s2)
MERGE (s3:Symptom {name:"nhồi máu cơ tim", layer:"Symptom"})
MERGE (d)-[:HAS_SYMPTOM]->(s3)
MERGE (det1:Detail {name:"bệnh động mạch vành có thể mất nhiều năm để tiến triển", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det1)
MERGE (det2:Detail {name:"bạn có thể không nhận thấy bất kỳ triệu chứng nào của bệnh cho đến khi động mạch vành đủ hẹp", layer:"Detail"})
MERGE (d)-[:HAS_DETAIL]->(det2)

// ===== Article 259 | Chunk 3 | Bệnh động mạch vành =====
MERGE (d:Disease {name:"Bệnh động mạch vành", layer:"Disease"})
MERGE (p1:Population {name:"nam và nữ", layer:"Population"})
MERGE (d)-[:AFFECTS]->(p1)
MERGE (rf1:RiskFactor {name:"bệnh có thể được di truyền (xuất hiện nhiều trong gia đình)", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf1)
MERGE (rf2:RiskFactor {name:"mảng bám tích tụ trong động mạch qua nhiều năm", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf2)
MERGE (rf3:RiskFactor {name:"tuổi", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf3)
MERGE (rf4:RiskFactor {name:"bệnh sử gia đình", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf4)
MERGE (rf5:RiskFactor {name:"cao huyết áp", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf5)
MERGE (rf6:RiskFactor {name:"cholesterol cao", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf6)
MERGE (rf7:RiskFactor {name:"hút thuốc lá", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf7)
MERGE (rf8:RiskFactor {name:"chế độ ăn thiếu chất", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf8)
MERGE (rf9:RiskFactor {name:"thừa cân hoặc béo phì", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf9)
MERGE (rf10:RiskFactor {name:"lối sống ít vận động", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf10)
MERGE (rf11:RiskFactor {name:"các bệnh lý khác (như bệnh tiểu đường)", layer:"RiskFactor"})
MERGE (d)-[:HAS_RISK_FACTOR]->(rf11)

// ===== Article 259 | Chunk 4 | Bệnh động mạch vành =====
MERGE (d:Disease {name:"Bệnh động mạch vành", layer:"Disease"})
MERGE (t1:Treatment {name:"hầu hết người bị bệnh động mạch vành phải dùng thuốc để giúp kiểm soát bệnh", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t1)
MERGE (t2:Treatment {name:"các thuốc như thuốc chẹn bêta, chẹn kênh canxi và nitrat có thể giúp giảm đau thắt ngực", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t2)
MERGE (t3:Treatment {name:"uống aspirin liều thấp mỗi ngày có thể giảm nguy cơ tái phát nhồi máu cơ tim", layer:"Treatment"})
