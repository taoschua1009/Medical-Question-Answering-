MERGE (d)-[:HAS_SYMPTOM]->(s7)
MERGE (t1:Treatment {name:"điều trị bằng nhiều phương pháp bao gồm thuốc giảm đau và liệu pháp hormon như thuốc tránh thai, miếng dán hoặc đặt vòng tránh thai, thuốc tránh thai chỉ chứa progestin và danazol – một loại steroid tổng hợp", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t1)
MERGE (t2:Treatment {name:"trong trường hợp điều trị nội khoa thất bại, có thể chỉ định phẫu thuật bảo tồn để loại bỏ mô lạc nội mạc tử cung", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t2)
MERGE (t3:Treatment {name:"bệnh nhân có tình trạng vô sinh có thể được sử dụng các phương pháp hỗ trợ sinh sản", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t3)
MERGE (t4:Treatment {name:"trong các trường hợp nghiêm trọng, cắt bỏ tử cung có thể thực hiện như một phương án cuối cùng trong thời kỳ sinh đẻ vì sau khi cắt bỏ tử cung, bệnh nhân sẽ không có khả năng mang thai", layer:"Treatment"})
MERGE (d)-[:HAS_TREATMENT]->(t4)

